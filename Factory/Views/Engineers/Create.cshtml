
@model Factory.Models.Engineer

<div class="container">
<h4>Add a new Engineer</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required = "required" })

  @Html.LabelFor(model => model.DateHired)
  @Html.TextBoxFor(model => model.DateHired, new { type = "date", required = "required" })

  <input class="myCssClass" type="submit" value="Add new Engineer" />
}
<p>@Html.ActionLink("Show all Engineers", "Index", null, null , new {@class="myCssClass"})</p>
<p>@Html.ActionLink("Home", "Index", "Home", null , new {@class="myCssClass"})</p>
</div>